import random 
chosen_number=random.randint(1,20)
attempt=0
guess=None
max_attempt=3

while(guess!= chosen_number and attempt<=max_attempt):
    guess=int(input("Guess a number from 0 to 20:"))
    attempt=attempt+1
    if(guess>chosen_number):
      print("too high")
    elif(guess<chosen_number):
      print("too low")
    
    else:
      print("Wow, correct guess!!")
      print("you took:",attempt, "attempts in total")
    if(attempt==max_attempt):
       print("Sorry, the number of your attempts are over")
       print("the correct number was:", chosen_number)
       break
   
